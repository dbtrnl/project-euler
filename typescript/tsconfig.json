{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@data/*": [ "./src/data/*" ],
      "@interfaces/*": [ "./src/interfaces/*" ],
      "@problems/*": [ "./src/problems/*" ],
      "@utils/*": [ "./src/utils/*" ],
    },
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
  }
}
