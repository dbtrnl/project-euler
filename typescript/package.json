{
  "name": "project-euler",
  "version": "1.0.0",
  "repository": "https://github.com/dbtrnl/project-euler.git",
  "author": "dbtrnl <daniel.bittar@alumni.usp.br>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf coverage",
    "eslint:audit": "eslint .",
    "test": "jest --silent",
    "test:cov": "jest --coverage",
    "test:cov:silent": "jest --coverage --silent",
    "test:single": "jest -t",
    "test:single:silent": "jest --silent -t"
  },
  "devDependencies": {
    "@types/eslint": "^8.21.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "arrow-body-style": "off",
      "arrow-parens": "warn",
      "comma-dangle": "warn",
      "import/extensions": "off",
      "import/no-unresolved": "warn",
      "import/no-extraneous-dependencies": "off",
      "max-len": "off",
      "no-console": "off",
      "no-continue": "off",
      "no-else-return": "off",
      "no-param-reassign": "warn",
      "no-plusplus": "off",
      "no-restricted-syntax": "off",
      "no-return-assign": "warn",
      "no-unused-vars": "off",
      "no-unused-expressions": "off",
      "padded-blocks": "off",
      "semi": [
        "error",
        "never"
      ]
    }
  }
}
