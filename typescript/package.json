{
  "name": "project-euler",
  "version": "1.0.0",
  "repository": "https://github.com/dbtrnl/project-euler.git",
  "author": "dbtrnl <daniel.bittar@alumni.usp.br>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf coverage",
    "eslint:audit": "eslint .",
    "test": "jest --silent",
    "test:cov": "jest --coverage --silent",
    "test-single": "jest --silent -t"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.0",
    "jest": "^27.2.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "arrow-body-style": "off",
      "arrow-parens": "warn",
      "comma-dangle": "warn",
      "import/extensions": "off",
      "import/no-unresolved": "warn",
      "import/no-extraneous-dependencies": "off",
      "max-len": "off",
      "no-console": "off",
      "no-continue": "off",
      "no-else-return": "off",
      "no-param-reassign": "warn",
      "no-plusplus": "off",
      "no-restricted-syntax": "off",
      "no-return-assign": "warn",
      "no-unused-vars": "off",
      "no-unused-expressions": "off",
      "padded-blocks": "off",
      "semi": [
        "error",
        "never"
      ]
    }
  }
}